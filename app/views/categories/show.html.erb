<div class="breadcrumb">
  << <%= link_to 'CATEGORIES', categories_path %>
</div>

<div class="list">

<h1 class="title"><%= @customer.first_name %> <%= @customer.last_name %></h1>

<p id="notice"><%= notice %></p>

<div class="field">
  <label>Category:</label>
  <%= @category.category %>
</div>

<div class="field">
  <label>Name:</label>
  <%= @category.name %>
</div>

<div class="field">
  <label>Amount:</label>
  <%= number_to_currency(@category.amount) %>
</div>

<%= link_to 'Edit details', edit_category_path(@category), :class => "link_button" %>
<a href="#" onclick="confirm('Are you sure you want to delete this category?', '<%= delete_category_path(@category) %>')" class="link_button">Remove</a>

</div>