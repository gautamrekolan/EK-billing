<div class="list">

<h1 class="title">Organizations</h1>

<%= link_to 'Add a new organization', new_organization_path, :class => "add_link" %>

<% if @organizations.empty? == false %>
    <table class="margin_above">
        <% @organizations.each do |organization| %>
          <tr>
            <td><%= link_to organization.name, organization %></td>
            <td><%= organization.contact %></td>
            <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
            <td><a href="#" onclick="confirm('Are you sure you want to delete this organization?', '<%= delete_organization_path(organization) %>')">Remove</a></td>
          </tr>
        <% end %>
    </table>
<% else %>
    <p class="currently_no">There are currently no organizations.</p>
<% end %>

</div>